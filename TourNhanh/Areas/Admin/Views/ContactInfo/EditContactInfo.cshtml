@model TourNhanh.ViewModel.ContactInfo

@{
    ViewData["Title"] = "Edit Contact Info";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Sửa thông tin liên hệ</h5>
                        </div>

                        <form asp-action="EditContactInfo" asp-controller="ContactInfo" asp-area="Admin" class="theme-form theme-form-2 mega-form" method="post">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Zalo URL</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="ZaloUrl" placeholder="Zalo URL" />
                                        <span asp-validation-for="ZaloUrl" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Phone URL</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="PhoneUrl" placeholder="Phone URL" />
                                        <span asp-validation-for="PhoneUrl" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Phone Number</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="PhoneNumber" placeholder="Phone Number" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="card-footer text-end border-0 pt-0">
                                    <button class="btn btn-primary me-3" type="submit">Xác nhận</button>
                                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="ContactInfo" asp-action="Index">Hủy bỏ</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>