<style>
    section {
        min-height: 500px;
    }

    .cart--container {
        display: flex;
        justify-content: space-evenly;
        margin-top: 50px;
        flex-flow: column;
        align-items: center;
    }

        .cart--container:first-child {
            width: 300px;
        }

        .cart--container .item--cart {
            /* align-self: flex-end */
            margin: 0px 0 50px 90px;
        }

    .title-gradient-h {
        font-size: 26px;
        text-transform: uppercase;
        background-color: #de0004;
        background-image: linear-gradient(90deg, #f00 0%, #122125 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      
    }

    .title-gradient {
        font-size: 26px;
        background-color: #00DBDE;
        background-image: linear-gradient(90deg, #00DBDE 0%, #FC00FF 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>


<!-- BREADCRUMB START-->

<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Booking Tour
        </h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="~/Tour/Index">Danh sách tour</a></li>
            <li class="breadcrumb-item active text-white">Kết quả</li>
        </ol>
    </div>
</div>

<!-- /BREADCRUMB END -->

<section>
    <div class="container">
        
            
             <h2 style="margin: 20px 0 30px" class="title-gradient-h text-center">Payment Failure</h2>

         


            <div class="cart--container">
                <h2 class="text-danger">@TempData["Message"]</h2>
                <h3 style="max-width: 800px" class="title-gradient"> Không sao hết hãy thử lại sau nhé</h3>
                <img src="https://plus.unsplash.com/premium_photo-1681923752435-5231d83efbf2?q=80&w=1998&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" width="auto" height="300px" />
                <div class="item--cart">
                    <a asp-action="Index" asp-controller="Tour">
                        <button class="btn-action" style="margin: 50px 0 50px -90px">
                            <i class="fa-solid fa-arrow-left"></i>
                            Trở về trang chủ
                        </button>
                    </a>
                </div>

            </div>

      </div>

        
</section>
